@require mixins
@require common


#overlay .status
  center()
  color $color_sec
  display inline-table
  font $stack_fjalla, 6rem
  height 20%
  text-align center
  width 100%


.wizard
  center()
  display block
  overflow hidden
  right 12.5%
  top 22.5%
  width 45rem

  > .actions
    float right
    width 39%

    > ul
      display inline-block
      text-align right
      width 100%

    a
      &, &:active, &:hover
        display block
        margin 0
        padding 0.5em
        rounded()
        text-decoration none

    li
      width 50%

      &:first-child a
        margin-right 0.25em

      &:not(:first-child) a
        margin-left 0.25em

      &:not(.disabled):last-child a
        background-color orange
        color black

      &:not(.disabled):not(:last-child) a
        background-color $color_pri
        color #fff

      &.disabled a
        &, &:active, &:hover
          background-color lighten($color_pri, 80%) !important
          color black !important

  > .content
    background $color_sec
    display block
    margin 0 0 0.5em 0
    min-height 35em
    overflow hidden
    position relative
    rounded()
    shadow()
    width auto

    +below($bigger)
      min-height 25em

    > .body
      font $stack_fjalla, 3.5rem
      float left
      padding 5%
      position absolute
      size 90%

      input
        input $color_pri
        border 1px solid $color_sec
        display block
        font $stack_roboto, 1.1em
        margin-top 1em
        padding 0
        text-align center
        width 100%

        &.error
          background lighten($color_pri, 80%)
          border 1px solid lighten($color_pri, 55%)
          color $color_pri

        &[type="checkbox"]
          display inline-block

        &[type="range"]
          range-input($color_pri, 100%, 20px, 4px, $color_pri)
          margin-top 0.5em

          &[disabled]
            pointer-events none
            range-input(#999, 100%, 20px, 4px, #999)
            margin-top 0.5em

        &[type="search"],
        &[type="text"]
          rounded()

      label
        display inline-block
        margin-top 1em

        +below($bigger)
          margin-top 0.5em

        &.error
          color $color_pri
          display inline-block
          margin-left 1.5em

      ol
        margin-top 1em

      span
        display block

        &.red
          color $color_pri
          display inline

      ul
        list-style disc !important

        > li
          display list-item

    > .title
      position absolute
      left -999em

  > .steps
    display block
    position relative
    shadow()
    width 20%

    > ul > li
      width 100%

    a
      &, &:active, &:hover
        display block
        margin 0 0.5em 0.5em 0
        padding 0.5em
        rounded()
        text-decoration none
        width auto

        +below($bigger)
          padding 0.6em 0.5em 0.5em

    .current a
      &, &:active, &:hover
        background $color_pri
        color $color_sec
        cursor default

    .current-info
      position absolute
      left -999em

    .disabled a
      &, &:active, &:hover
        background lighten($color_pri, 90%)
        color black
        cursor default

    .done a
      &, &:active, &:hover
        background lighten($color_pri, 80%)
        color black

    .error a
      &, &:active, &:hover
        background $color_pri
        color $color_sec

    .number
      font-weight bold

  > .actions > ul > li,
  > .steps > ul > li
    float left

  a
    outline 0

  ul
    list-style none !important
    margin 0
    padding 0

    > li
      display block
      padding 0
