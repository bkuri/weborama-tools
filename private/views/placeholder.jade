doctype html

html
  head
    link(rel='stylesheet' type='text/css' href='/css/app.css' media='all')
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    script(src='//media.adrcdn.com/scripts/external/jquery/jquery-2.1.3.min.js')
    script(src='/js/app.js')
    title= title

    #overlay.hidden
    
    nav
      h1 weborama.tech
      
      ul
        li: a(href='/') Placeholder
    
    #form_container
      h1= title

      form(method='get' action='/api/placeholder')
        ul
          li
            label.description(for='e1') Width (px)

            input#e1.element.text(
              maxlength='5'
              min='25'
              name='width'
              required
              type='number'
              value='450'
            )

            p.guidelines
              small Width of the background rectangle in pixels.

          li
            label.description(for='e2') Height (px)

            input#e2.element.text(
              maxlength='5'
              min='25'
              name='height'
              required
              type='number'
              value='150'
            )

            p.guidelines
              small Height of the background rectangle in pixels.

          li
            label.description(for='e3') Background color

            input#e3.element.text(
              maxlength='15'
              name='color'
              type='text'
              value='#DCDCDC'
            )
              
            p.guidelines
              small
                | Both hexadecimal values and 
                a(href=url.colors target='_blank') color names 
                | are supported.

          li
            label.description(for='e4') Gravity

            select#e4.element.select(name='gravity')
              option(value='NorthWest') NorthWest
              option(value='North') North
              option(value='NorthEast') NorthEast
              option(value='West') West
              option(value='Center' selected) Center
              option(value='East') East
              option(value='SouthWest') SouthWest
              option(value='South') South
              option(value='SouthEast') SouthEast

            p.guidelines
              small Where the logo should be placed relative to the image.

          li
            label.description(for='e5') Quality (90%)

            input#e5.element(
              max='100'
              min='25'
              name='quality'
              type='range'
              value='90'
            )

            p.guidelines
              small Lower values produce smaller files, while higher values tend to look better.

          li.buttons
            input#submit.button_text(type='submit' value='Generate')

  #footer
    | v!{version} // Made by 
    a(href=url.bkuri target='_blank') @bkuri
    |  for 
    a(href=url.weborama target='_blank') @weborama
    |  // 
    span#hits(data-hits=hits) !{hits}
    |  unique images generated
